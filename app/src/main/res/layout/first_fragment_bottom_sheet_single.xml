<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background">

    <ImageView
        android:id="@+id/currency_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="10dp"
        tools:src="@drawable/ic_dollar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/currency"
        style="@style/customtextviewbold"
        tools:text="1 usd"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/currency_type"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toRightOf="@id/currency_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/currency_logo"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintWidth_percent="0.3" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/course_sb"
        style="@style/customtextviewbold"
        tools:text="10 528.59"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/currency"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        app:layout_constraintRight_toLeftOf="@id/buying"
        app:layout_constraintTop_toTopOf="@id/currency"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintWidth_percent="0.3" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/buying"
        style="@style/customtextviewbold"
        tools:text="10 528.59"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/currency"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toRightOf="@id/course_sb"
        app:layout_constraintRight_toLeftOf="@id/selling"
        app:layout_constraintTop_toTopOf="@id/currency"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintWidth_percent="0.3" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/selling"
        style="@style/customtextviewbold"
        tools:text="10 528.59"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/currency"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toRightOf="@id/buying"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/currency"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintWidth_percent="0.3" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/currency_type"
        style="@style/customtextviewnormal"
        android:text="buyuk ipak yo'li mobile"
        android:textAllCaps="true"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/currency_logo"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toRightOf="@id/currency_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/currency"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintWidth_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

</androidx.constraintlayout.widget.ConstraintLayout>