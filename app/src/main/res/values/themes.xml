<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IpakYoliBankExample" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/green</item>
        <!-- Customize your theme here. -->

        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="customcardview" parent="Widget.MaterialComponents.CardView">

        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="cardElevation">4dp</item>

    </style>

    <style name="customtextviewbold" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
        <item name="maxLines">1</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="customtextviewnormal" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="green_button" parent="Widget.MaterialComponents.Button">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/green</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@drawable/button_textcolor</item>

    </style>

</resources>